{#
/**
 * @file
 * Display of footer
 *
 * Available variables:
 * - config: The available texts
 * - image: A rendered image
 */
#}
<a href="{{ config.hero_link }}" class="hero">
  <div class="container-fluid">
    <div class="row">
      <div class="hero-image">
        {{ image }}
      </div>
      <div class="container">
        <div class="row mt-3 mt-sm-5 mb-3 mb-sm-5">
          <div class="col-11">
            <span class="hero-text d-block mt-3 mt-sm-5 mb-3 mb-sm-5">
              <h1 class="hero-text-title">{{ config.hero_title }}</h1>
              <p class="hero-text-lead">{{ config.hero_text }}</p>
            </span>
          </div>
        </div>
      </div>
      <div class="logo-byraad150">
        <img src="/{{ directory }}/images/aarhusbyraad150.svg" alt="byraad150">
      </div>
    </div>
  </div>
</a>
