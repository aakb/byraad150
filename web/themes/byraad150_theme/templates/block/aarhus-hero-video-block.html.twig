<div class="container-fluid hero-video bg-primary text-white pt-5 pb-5">
  <div class="row">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 hero-video-title">
          <h2>{{ video_title }}</h2>
        </div>
        <div class="col-sm-6 hero-video-description">
          <p>{{ video_description }}</p>
        </div>
        <div class="col-sm-6 hero-video-video">
          {{ video }}
        </div>
      </div>
    </div>
  </div>
</div>
